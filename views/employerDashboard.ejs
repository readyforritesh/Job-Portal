<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employer Dashboard</title>
    <style>
    /* General Styles */
    body {
      margin: 0;
      padding: 0;
      font-family: 'Arial', sans-serif;
      background-color: #1a1a1a; /* Dark background */
      color: #e0e0e0; /* Light text color */
      display: flex;
      min-height: 100vh; /* Full viewport height */
    }

    /* Navbar Styles (Left Panel) */
    nav {
      background-color: #121212; /* Darker black for navbar */
      width: 250px; /* Fixed width for sidebar */
      min-height: 100vh; /* Full height */
      position: fixed; /* Fixed position */
      top: 0;
      left: 0;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      padding: 20px;
      box-shadow: 3px 0 10px rgba(0, 0, 0, 0.5);
      z-index: 1000; /* Ensure navbar stays on top */
    }

    .nav {
      color: #ffd700; /* Gold color for brand */
      font-size: 1.5rem;
      font-weight: bold;
      margin-bottom: 30px;
      text-align: center;
      width: 100%; /* Ensure brand is centered */
    }

    .register-btn,
    .logout {
      color: #e0e0e0; /* Light text color */
      text-decoration: none;
      font-size: 1.1rem;
      padding: 10px 15px;
      border-radius: 5px;
      transition: background-color 0.3s, color 0.3s;
      display: block; /* Ensure full width clickable area */
      width: 100%; /* Full width for buttons */
      text-align: left; /* Align text to the left */
    }

    .register-btn:hover {
      background-color: #ffd700; /* Gold background on hover */
      color: #121212; /* Dark text on hover */
    }

    .logout {
      color: #ff6b6b; /* Red color for logout */
      margin-top: auto; /* Push logout to the bottom */
    }

    .logout:hover {
      background-color: #ff6b6b; /* Red background on hover */
      color: #121212; /* Dark text on hover */
    }

    /* Main Content Styles */
    .main-content {
      margin-left: 250px; /* Offset for the fixed navbar */
      padding: 20px;
      flex-grow: 1; /* Allow main content to take remaining space */
      max-width: calc(100% - 250px); /* Ensure content doesn't overflow */
    }

/* Registered Companies Section */
.registered-companies-section {
  width: 100%; /* Ensure full width */
  margin-bottom: 20px; /* Space below the section */
}

/* Section Title Styling */
.section-title {
  color: #ffd700; /* Gold color for the heading */
  font-size: 1.75rem; /* Larger font size */
  margin-bottom: 20px; /* Space below the heading */
  text-align: center; /* Align text to the right */
  padding-right: 10px; /* Add some padding for alignment */
  width: 100%; /* Ensure the heading takes full width */
}

/* Table Container */
.table-container {
  width: 100%; /* Full width */
  overflow-x: auto; /* Add horizontal scroll for small screens */
  display: block; /* Ensures that the container is a block-level element */
  padding-right: 15px; /* Optional: add some padding to prevent scrollbar overlap */
  padding-left: 300px;
}


/* Table Styles */
.company-table {
  width: 100%;
  color: #e0e0e0; /* Light text color */
  border-collapse: collapse;
  margin-bottom: 20px;
}

.company-table th,
.company-table td {
  padding: 12px;
  text-align: left;
  border: 1px solid #333; /* Dark borders */
}

.company-table th {
  background-color: #121212; /* Darker black for headers */
  color: #ffd700; /* Gold color for header text */
}

.company-table tbody tr:hover {
  background-color: #2a2a2a; /* Slightly lighter black for hover */
}

.company-table a {
  color: #ffd700; /* Gold color for links */
  text-decoration: none;
  transition: color 0.3s;
}

.company-table a:hover {
  color: #e6b800; /* Darker gold on hover */
}

.no-companies {
  color: #e0e0e0; /* Light text color */
  text-align: center;
}
    /* Footer Styles */
    footer {
      background-color: #121212; /* Darker black for footer */
      color: #e0e0e0; /* Light text color */
      text-align: center;
      padding: 10px;
      margin-top: auto; /* Push footer to the bottom */
    }
</style>
</head>
<body>

    <!-- Navbar -->
    <nav>
        <div class="nav">Employer Dashboard
            
          
        </div>
        <a href="/company/register" class="register-btn">Register New Company</a>
        <a href="/logout" class="logout">Logout</a>
    </nav>

 <!-- Registered Companies Section -->
<div class="registered-companies-section">
    <h2 class="section-title">Registered Companies</h2>
    <div class="table-container">
      <table class="company-table">
        <thead>
          <tr>
            <th>Company Name</th>
            <th>Address</th>
            <th>Contact Info</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (companies && companies.length > 0) { %>
            <% companies.forEach(company => { %>
              <tr>
                <td><%= company.companyName %></td>
                <td><%= company.address %></td>
                <td><%= company.contactInfo %></td>
                <td><a href="/company/<%= company.companyId %>/jobs">Create/Manage Jobs</a></td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="4" class="no-companies">No companies registered yet.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
    <!-- Footer -->
    <footer>
        &copy; 2024 Next Step Workforce Solutions. All rights reserved.
    </footer>

</body>
</html>
